{
  "name": "aide-chat",
  "displayName": "AIDE Chat",
  "description": "AIDE chat surface (UI only).",
  "version": "0.3.0",
  "publisher": "aide",
  "license": "MIT",
  "private": true,
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./src/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aideChat.session"
  ],
  "contributes": {
    "configuration": {
      "title": "AIDE",
      "properties": {
        "aide.chat.defaultRightSide": {
          "type": "boolean",
          "default": true,
          "description": "Try to place AIDE Chat in the secondary side bar on first run."
        }
      }
    },
    "views": {
      "workbench.panel.chat": [
        {
          "id": "aideChat.session",
          "name": "AIDE"
        }
      ]
    },
    "submenus": [
      {
        "id": "aide.chat.contextMenu",
        "label": "Context"
      }
    ],
    "commands": [
      {
        "command": "aide.chat.context.roadmap",
        "category": "AIDE",
        "title": "Roadmap"
      },
      {
        "command": "aide.chat.context.checklist",
        "category": "AIDE",
        "title": "Checklist"
      },
      {
        "command": "aide.chat.context.todos",
        "category": "AIDE",
        "title": "Todos"
      },
      {
        "command": "aide.chat.context.snapshots",
        "category": "AIDE",
        "title": "Snapshots"
      },
      {
        "command": "aide.chat.sync",
        "category": "AIDE",
        "title": "Sync"
      },
      {
        "command": "aide.chat.snapshot",
        "category": "AIDE",
        "title": "Snapshot"
      },
      {
        "command": "aide.chat.openChecklist",
        "category": "AIDE",
        "title": "Checklist"
      },
      {
        "command": "aide.chat.refresh",
        "category": "AIDE",
        "title": "Refresh"
      }
    ],
    "menus": {
      "view/title": [
        {
          "when": "view == aideChat.session",
          "submenu": "aide.chat.contextMenu",
          "group": "navigation@0"
        },
        {
          "when": "view == aideChat.session",
          "command": "aide.chat.sync",
          "group": "navigation@1"
        },
        {
          "when": "view == aideChat.session",
          "command": "aide.chat.snapshot",
          "group": "navigation@2"
        },
        {
          "when": "view == aideChat.session",
          "command": "aide.chat.openChecklist",
          "group": "navigation@3"
        },
        {
          "when": "view == aideChat.session",
          "command": "aide.chat.refresh",
          "group": "navigation@4"
        }
      ],
      "aide.chat.contextMenu": [
        {
          "command": "aide.chat.context.roadmap",
          "group": "1"
        },
        {
          "command": "aide.chat.context.checklist",
          "group": "1"
        },
        {
          "command": "aide.chat.context.todos",
          "group": "1"
        },
        {
          "command": "aide.chat.context.snapshots",
          "group": "1"
        }
      ]
    }
  }
}
